<h1>Articles</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @articles.each do |article| %>
      <tr>
        <td><%= article.title %></td>
        <% if article.image.exists? %>
          <%= image_tag article.image.url %><br/>
        <% end %>
        <td><%= article.body %></td>
        <td>has <%= pluralize(article.comments.count, 'comment') %></td>
        <td>Posted <%= "by #{ article.user.user_name }" if current_user &.admin %>
        <%= time_ago_in_words(article.created_at) unless article.created_at.blank? %> ago</td>
        <% if current_user && current_user.admin && current_user.id == article.user_id %>
          <td><%= link_to 'Edit', edit_article_path(article) %></td>
          <td><%= link_to 'Destroy', article, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
        <td><%= link_to 'Show', article %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<% if current_user &.admin %>
  <%= link_to 'administration', rails_admin_path %>
  <%= link_to 'New Article', new_article_path %>
<% end %>
